{
  "name": "Unit",
  "version": "1.0",
  "description": "Extend Unit system with Web Extension functionality",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://unit.land/*",
        "http://localhost:4000/*"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "alarms",
    "background",
    "bookmarks",
    "browsingData",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "declarativeContent",
    "desktopCapture",
    "downloads",
    "gcm",
    "geolocation",
    "history",
    "idle",
    "nativeMessaging",
    "notifications",
    "pageCapture",
    "power",
    "printerProvider",
    "proxy",
    "sessions",
    "storage",
    "system.cpu",
    "system.display",
    "system.memory",
    "system.storage",
    "tabCapture",
    "topSites",
    "tts",
    "ttsEngine",
    "unlimitedStorage",
    "scripting"
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "Unit X",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon_16.png",
      "32": "favicon_32.png",
      "48": "favicon_48.png",
      "128": "favicon_128.png"
    }
  },
  "icons": {
    "16": "favicon_16.png",
    "32": "favicon_32.png",
    "48": "favicon_48.png",
    "128": "favicon_128.png"
  }
}
